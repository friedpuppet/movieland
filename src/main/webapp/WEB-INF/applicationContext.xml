<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd


        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="ua.yelisieiev">
        <context:exclude-filter type="regex" expression="com\.yelisieiev\.web\..*"/>
    </context:component-scan>

    <import resource="jdbcContext.xml" />

    <bean id="cachedGenreDao" class="ua.yelisieiev.dao.cache.CachedGenreDao">
        <constructor-arg name="genreDao" ref="jdbcGenreDao"/>
    </bean>

    <bean id="defaultGenreService" class="ua.yelisieiev.service.DefaultGenreService">
        <constructor-arg name="genreDao" ref="cachedGenreDao"/>
    </bean>
</beans>
